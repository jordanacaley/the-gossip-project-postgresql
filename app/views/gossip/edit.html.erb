<html>
  <body>
    <h1>Edit gossip</h1>

    <%= form_for @gossip do |f| %>

      <div class="form-group">
        <label>Title</label>
          <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <label>Content</label>
          <%= f.text_area :content, class: 'form-control' %>
      </div>

      <div class="form-group">
        <button type="submit">Save updates</button>
      </div>

      <%= f.hidden_field :user_id, value: 12 %>

    <% end %>

  </body>
</html>
